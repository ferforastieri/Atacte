{
  "name": "atacte-password-manager",
  "version": "1.0.0",
  "description": "Backend API para gerenciador de senhas Atacte",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "jest",
    "db:generate": "prisma generate --schema=src/infrastructure/prisma/schema.prisma",
    "db:push": "prisma db push --schema=src/infrastructure/prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=src/infrastructure/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=src/infrastructure/prisma/schema.prisma"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^6.8.1",
    "joi": "^17.9.2",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "zxcvbn": "^4.4.2",
    "@prisma/client": "^5.2.0",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "typescript": "^5.1.6",
    "tsx": "^3.12.7",
    "@types/node": "^20.4.8",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/morgan": "^1.9.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/crypto-js": "^4.1.1",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.2",
    "@types/jest": "^29.5.3",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "supertest": "^6.3.3",
    "prisma": "^5.2.0"
  },
  "keywords": ["nodejs", "express", "password-manager", "security", "docker"],
  "author": "Fernando",
  "license": "MIT"
}
